{
  "name": "yupay-app",
  "version": "0.3.0",
  "description": "Yupay App",
  "main": "main.js",
  "scripts": {
    "start": "cross-env BROWSER=none concurrently \"node devStudentApp\" \"node devAdminApp\" \"electron .\"",
    "start-electron": "electron .",
    "lint": "tslint --project tslint.json",
    "build": "node buildStudentApp && node buildAdminApp ",
    "package": "npm run build && build --publish never",
    "pack-and-publish": "cross-env-shell NODE_ENV=production \"npm run build && build -w --publish always\"",
    "package-all": "npm run build && build -mwl",
    "package-mac": "cross-env-shell NODE_ENV=production \"npm run build && build -m\"",
    "package-linux": "npm run build && build --linux",
    "package-win": "npm run build && build --win --x64"
  },
  "author": {
    "name": "Milena Cabrera",
    "email": "mcabrerapatino@gmail.com"
  },
  "homepage": "",
  "build": {
    "appId": "com.yupay.yupay-desktop",
    "productName": "Yupay",
    "files": [
      "assets/",
      "admin-app-compiled/",
      "student-app-compiled/",
      "contentServer/",
      "resources/",
      "node_modules/",
      "main.js",
      "package.json",
      "logger.js"
    ],
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ]
    },
    "directories": {
      "buildResources": "resources",
      "output": "release"
    },
    "publish": {
      "provider": "s3",
      "bucket": ""
    }
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "electron": "^3.0.0",
    "electron-builder": "^20.39.0"
  },
  "dependencies": {
    "cors": "^2.8.4",
    "electron-is-dev": "^1.0.1",
    "express": "^4.17.3",
    "ip": "^1.1.5",
    "mime": "^2.4.0",
    "opn": "^5.4.0",
    "shelljs": "^0.8.3",
    "uuid": "^3.3.2"
  }
}
